{
    "name": "todo-list",
    "version": "1.0.0",
    "description": "ToDo List API written in Loopback 4 and MongoDB",
    "keywords": [
        "loopback-application",
        "loopback"
    ],
    "main": "index.js",
    "engines": {
        "node": ">=8.9"
    },
    "scripts": {
        "build:apidocs": "lb-apidocs",
        "build": "lb-tsc es2017 --outDir dist",
        "build:watch": "lb-tsc --watch",
        "clean": "lb-clean dist",
        "lint": "npm run prettier:check && npm run tslint",
        "lint:fix": "npm run tslint:fix && npm run prettier:fix",
        "prettier:cli": "lb-prettier \"**/*.ts\" \"**/*.js\"",
        "prettier:check": "npm run prettier:cli -- -l",
        "prettier:fix": "npm run prettier:cli -- --write",
        "tslint": "lb-tslint",
        "tslint:fix": "npm run tslint -- --fix",
        "pretest": "npm run clean && npm run build",
        "test": "lb-mocha --allow-console-logs \"dist/__tests__\"",
        "posttest": "npm run lint",
        "test:dev": "lb-mocha --allow-console-logs dist/__tests__/**/*.js && npm run posttest",
        "docker:build": "docker build -t todo-list .",
        "docker:run": "docker run -p 3000:3000 -d todo-list",
        "migrate": "node ./dist/migrate",
        "prestart": "npm run build",
        "start": "node .",
        "prepublishOnly": "npm run test",
        "start-db": "sudo service mongodb start",
        "dev": "tsc-watch --onSuccess \"node --inspect .\""
    },
    "repository": {
        "type": "git"
    },
    "author": "",
    "license": "",
    "files": [
        "README.md",
        "index.js",
        "index.d.ts",
        "dist",
        "src",
        "!*/__tests__"
    ],
    "dependencies": {
        "@loopback/boot": "^1.2.7",
        "@loopback/context": "^1.15.0",
        "@loopback/core": "^1.7.0",
        "@loopback/openapi-v3": "^1.3.11",
        "@loopback/repository": "^1.5.5",
        "@loopback/rest": "^1.11.2",
        "@loopback/rest-explorer": "^1.1.22",
        "@loopback/service-proxy": "^1.1.10",
        "loopback-connector-mongodb": "^4.2.0"
    },
    "devDependencies": {
        "@loopback/build": "^1.5.4",
        "@loopback/testlab": "^1.2.9",
        "@loopback/tslint-config": "^2.0.4",
        "@types/node": "^10.11.2",
        "tsc-watch": "^2.2.0",
        "tslint": "^5.15.0",
        "typescript": "^3.4.3"
    }
}
